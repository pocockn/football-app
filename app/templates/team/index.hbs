<div id="page-content-wrapper">
  <div class="container-fluid">
    <h1>Teams</h1>
    <div class="row">
      {{#each model as |team|}}
        <div class="col-md-4">
          {{#team-single single-team=team}}
            {{#link-to 'team.edit' team.id class='btn btn-info btn-xs' }}Edit Team{{/link-to}}
            <button class="btn btn-danger btn-xs" {{action 'deleteTeam' team}}>Delete</button>
          {{/team-single}}
        </div>
      {{/each}}
    </div>
    {{#link-to 'team.new' class='btn btn-success btn-md' }}Add Team{{/link-to}}
  </div>
</div>
